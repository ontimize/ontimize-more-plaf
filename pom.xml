	<distributionManagement>
	    <repository>
			<id>public-artifactory</id>
			<name>public-artifactory-releases</name>
			<url>https://public-artifactory.imatia.com/artifactory/ontimize-release-opensource</url>
	    </repository>
		<snapshotRepository>
			<id>imatia-artifactory</id>
			<name>libs-snapshot-local</name>
			<url>https://artifactory.imatia.com/artifactory/libs-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.ontimize</groupId>
				<artifactId>ontimize-core</artifactId>
				<version>${ontimize-core.version}</version>
			</dependency>
			<dependency>
				<groupId>com.ontimize</groupId>
				<artifactId>ontimize-more-agenda</artifactId>
				<version>${ontimize-more-agenda.version}</version>
				<optional>true</optional>
			</dependency>
			<dependency>
				<groupId>com.ontimize</groupId>
				<artifactId>ontimize-more-diagram</artifactId>
				<version>${ontimize-more-diagram.version}</version>
				<optional>true</optional>
			</dependency>
			<dependency>
				<groupId>com.ontimize</groupId>
				<artifactId>ontimize-more-gantt</artifactId>
				<version>${ontimize-more-gantt.version}</version>
				<optional>true</optional>
			</dependency>
			<dependency>
				<groupId>com.ontimize</groupId>
				<artifactId>ontimize-more-gis</artifactId>
				<version>${ontimize-more-gis.version}</version>
				<optional>true</optional>
			</dependency>
			<dependency>
				<groupId>com.ontimize</groupId>
				<artifactId>ontimize-more-planning</artifactId>
				<version>${ontimize-more-planning.version}</version>
				<optional>true</optional>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<modules>
		<module>ontimize-more-plaf-j7</module>
		<module>ontimize-more-plaf-j11</module>
	</modules>


	<profiles>
		<profile>
			<id>generate_snapshot_version</id>
			<build>
				<plugins>				
					<!-- Manifest -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.4</version>
						<configuration>
							<archive>
								<addMavenDescriptor>false</addMavenDescriptor>
								<manifest>
									<mainClass>com.ontimize.plaf.utils.jar.JarUtil</mainClass>
								</manifest>
								<manifestEntries>
									<Built-By>${project.organization.name}</Built-By>
									<Version-number>${project.version}</Version-number>
									<Version-date>${maven.build.timestamp}</Version-date>
								</manifestEntries>
							</archive>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<version>2.8.1</version>
					</plugin>
				</plugins>
			</build>
