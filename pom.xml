	<properties>
		<ontimize-core.version>6.0.5</ontimize-core.version>
		<ontimize-more-workflow.version>2.6.1</ontimize-more-workflow.version>
		<ontimize-more-diagram.version>2.3.1</ontimize-more-diagram.version>
